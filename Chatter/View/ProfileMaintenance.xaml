    <ContentPage  x:Name="genderContent" BackgroundColor="WhiteSmoke">
        <StackLayout Margin="20,10,20,20">
            <StackLayout VerticalOptions="Center" Margin="0,10,0,0">
                        <Label Text="I am a" FontSize="30" VerticalOptions="Start" HorizontalOptions="Start" FontAttributes="Bold"></Label>
                    </StackLayout>
            <Grid x:Name="iamGrid"  HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Margin="50,0,50,0">
                <Button x:Name="womanButton" Grid.Row="0" CornerRadius="30" Text="Female" Clicked="Button_Clicked" BackgroundColor="Default" TextColor="Black" FontAttributes="Bold"></Button>
                <Button x:Name="manButton" Grid.Row="1" CornerRadius="30" Text="Male" Clicked="Button_Clicked" BackgroundColor="Default" TextColor="Black" FontAttributes="Bold"></Button>
            </Grid>
            <StackLayout VerticalOptions="Center" Margin="0,0,0,0">
                        <Label Text="I am interested in" FontSize="30" VerticalOptions="Start" HorizontalOptions="Start" FontAttributes="Bold"></Label>
                    </StackLayout>
            <Grid x:Name="gridInterest" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Margin="50,0,50,0">
                <Button x:Name="womenInterestButton" Grid.Row="0" CornerRadius="30" Text="Female" Clicked="Button_Interest" BackgroundColor="Default" TextColor="Black" FontAttributes="Bold"></Button>
                <Button x:Name="menInterestButton" Grid.Row="1" CornerRadius="30" Text="Male" Clicked="Button_Interest" BackgroundColor="Default" TextColor="Black" FontAttributes="Bold"></Button>
                <Button x:Name="everyoneInterestButton" Grid.Row="2" CornerRadius="30" Text="Everyone" Clicked="Button_Interest" BackgroundColor="Default" TextColor="Black" FontAttributes="Bold"></Button>
            </Grid>
            <Frame IsClippedToBounds="True" Padding="0" Margin="0" CornerRadius="30" VerticalOptions="End">
                <Button BackgroundColor="#3cc5d5" TextColor="White" CornerRadius="30" Text="CONTINUE" FontSize="Large" FontAttributes="Bold" Clicked="nextContent"></Button>
            </Frame>
        </StackLayout>
    </ContentPage>
    <ContentPage  x:Name="pictureContent" BackgroundColor="GhostWhite">
        <AbsoluteLayout x:Name="finalForm">
                <StackLayout Margin="20,0,20,20" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,1,1,1">
                <Frame CornerRadius="30" Padding="0" Margin="0,20,0,10" BorderColor="Accent" BackgroundColor="Transparent" HeightRequest="300" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" IsClippedToBounds="True">
                    <ImageButton BackgroundColor="Transparent" Margin="0" Aspect="AspectFill"  x:Name="chooseImageButton" Clicked="chooseImageButton_Clicked" HeightRequest="300" Source="add_pic.png" >
                    </ImageButton>
                </Frame>
                <Picker x:Name="imagePicker" IsVisible="False" SelectedIndexChanged="imagePicker_SelectedIndexChanged"></Picker>
                <Frame IsClippedToBounds="True" Padding="0" Margin="0" CornerRadius="30">
                    <Button BackgroundColor="#3cc5d5" TextColor="White" CornerRadius="30" Text="PROCEED" FontSize="Large" FontAttributes="Bold" x:Name="continueButton" Clicked="continueButton_Clicked"></Button>
                </Frame>
                </StackLayout>
            <!-- Overlay -->
            <ContentView x:Name="overlay"  
                         IsVisible="False"
                         BackgroundColor="#C0808080"  
                         Padding="0" AbsoluteLayout.LayoutFlags="All"
                                   AbsoluteLayout.LayoutBounds="0,0,1,1" >

                <StackLayout BackgroundColor="Transparent" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <StackLayout Spacing="0" >
                        <ffimageloading:CachedImage Source="welcomelogo.gif"  
                                        HeightRequest="100"  
                                        WidthRequest="100"/>
                    </StackLayout>
                </StackLayout>

            </ContentView>
        </AbsoluteLayout>
    </ContentPage>
</CarouselPage>