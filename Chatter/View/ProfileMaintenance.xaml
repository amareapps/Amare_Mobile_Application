<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Chatter"
             xmlns:sys="clr-namespace:System;assembly=netstandard" 
               xmlns:local1="clr-namespace:Chatter.Classes" 
               xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
               mc:Ignorable="d"
             x:Class="Chatter.ProfileMaintenance" Title="Register in Amare">

    <ContentPage x:Name="emailContent" BackgroundColor="WhiteSmoke">
        <StackLayout Margin="20,10,20,5">
            <StackLayout VerticalOptions="Center" Margin="0,10,0,0">
                <Label Text="Enter Login Details" FontSize="25" VerticalOptions="Start" HorizontalOptions="Start" FontAttributes="Bold" Margin="0,0,0,5"></Label>
                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                    <local:RoundedEntry x:Name="emailEntry" TextChanged="emailEntry_TextChanged" MaxLength="50" Keyboard="Email" HorizontalOptions="FillAndExpand" Placeholder="Email Address" FontSize="Medium" Grid.Row="0" VerticalOptions="CenterAndExpand" Margin="5,0,5,0"></local:RoundedEntry>
                </Grid>
                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                    <local:RoundedEntry x:Name="passwordEntry" TextChanged="passwordEntry_TextChanged" MaxLength="20" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Placeholder="Password" FontSize="Medium" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,0,5,0" IsPassword="True"/>
                    <Image Source="show.png" IsVisible="True" Opacity="0.4" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1" WidthRequest="20" HeightRequest="20" Margin="15">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ShowPass_Tapped" NumberOfTapsRequired="1"></TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Margin="10,0,20,0" Grid.Row="1" Grid.ColumnSpan="2" VerticalOptions="Start" Text="Note: Enter your email address in order to recover your account later." FontSize="Micro" FontAttributes="Bold"></Label>
                </Grid>
            </StackLayout>
            <StackLayout VerticalOptions="Center" Margin="0,10,0,0">
                <Label Text="My Personal Info is" FontSize="25" VerticalOptions="Start" HorizontalOptions="Start" FontAttributes="Bold" Margin="0,0,0,5"></Label>
                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Padding="0" Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"></ColumnDefinition>
                        <ColumnDefinition Width="80*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <local:RoundedEntry x:Name="userNameEntry" TextChanged="userNameEntry_TextChanged" MaxLength="50" HorizontalOptions="FillAndExpand" Placeholder="First Name" FontSize="Medium" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalOptions="CenterAndExpand" Margin="5,0,5,0"/>
                    <local1:CustomDatePicker x:Name="birthdatePicker" Margin="5,0,5,0" Format="MM/dd/yyyy" Placeholder="Select Date of Birth" HeightRequest="50" FontSize="Medium" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"></local1:CustomDatePicker>
                    <CheckBox IsChecked="False" CheckedChanged="CheckBox_CheckedChanged" HorizontalOptions="Start" VerticalOptions="Start"  Grid.Column="0" Grid.Row="2"></CheckBox>
                    <Label Text="Show age on my profile" Margin="0,6,0,0" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="2" HorizontalOptions="Start" VerticalOptions="Start"/>
                    <Label Margin="10,0,20,0" Padding="0" FontAttributes="Bold" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" VerticalOptions="Start" Text="Note: Entered name will be the name displayed on your profile. You must be 18 years old and above to register; your age will be viewed as public." FontSize="Micro"></Label>
                </Grid>
            </StackLayout>
            <Frame IsClippedToBounds="True" Padding="0" Margin="0" CornerRadius="30" BackgroundColor="Transparent" VerticalOptions="End">
                <Button BackgroundColor="#3cc5d5" TextColor="White" CornerRadius="30" Text="CONTINUE" FontSize="Large" FontAttributes="Bold" VerticalOptions="End" Clicked="nextContent"></Button>
            </Frame>
        </StackLayout>
    </ContentPage>
