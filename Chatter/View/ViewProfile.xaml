<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:Chatter.Classes" 
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             mc:Ignorable="d"
             x:Class="Chatter.View.ViewProfile" BackgroundColor="#EEEEEE">
    <Page.Resources>
        <local:BirthdaytoAgeConverter x:Key="birthdaytoage"></local:BirthdaytoAgeConverter>
        <local:StringToBoolen x:Key="stringtoBool"></local:StringToBoolen>
        <local:NumbertoBooleanConverter x:Key="numbertoBool"></local:NumbertoBooleanConverter>
    </Page.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Grid HeightRequest="30" Margin="0" Padding="0,10,0,5">
                <BoxView BackgroundColor="#EEEEEE" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5"/>
                <Button BackgroundColor="Transparent" ImageSource="backbuttonred.png" Grid.Column="0" Grid.Row="0" x:Name="backButton" Clicked="backButton_Clicked"/>
                <Label FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" FontSize="Medium" BackgroundColor="Transparent" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="4" Text="View Profile"/>
            </Grid>
            <ScrollView Padding="10,5,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="500" />
                    <RowDefinition Height="AUTO" />
                    <RowDefinition Height="AUTO" />
                    </Grid.RowDefinitions>
                <Frame HasShadow="True" IsClippedToBounds="True" Grid.Row="0" Padding="0" CornerRadius="20">
                        <AbsoluteLayout>
                            <CarouselView x:Name="galleryView" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                                <CarouselView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout>
                                            <Frame HasShadow="True"
                                                   BorderColor="DarkGray"
                                                   Margin="0"
                                                   Padding="0"
                                                   HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                                <ImageButton Source="{Binding image}" 
                                                             HorizontalOptions="FillAndExpand" 
                                                             VerticalOptions="FillAndExpand" 
                                                             Aspect="AspectFill" Clicked="ImageButton_Clicked" />
                                            </Frame>
                                        </StackLayout>
                                    </DataTemplate>
                                </CarouselView.ItemTemplate>
                            </CarouselView>
                            <IndicatorView x:Name="indicatorView" AbsoluteLayout.LayoutBounds="1,1,1,1" IsVisible="True" AbsoluteLayout.LayoutFlags="All"
                                        IndicatorColor="LightGray" BackgroundColor="Accent" 
                                        SelectedIndicatorColor="Accent"
                                        HorizontalOptions="Center" IndicatorSize="10"/>
                        </AbsoluteLayout>
                    </Frame>
                <Frame HasShadow="True" Grid.Row="1" CornerRadius="20">
                        <StackLayout Margin="0" Padding="0">
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding username}" TextColor="Black" FontSize="Large" FontAttributes="Bold">
                                </Label>
                                <Label Text="|" FontSize="Large" FontAttributes="Bold"></Label>
                                <Label Text="{Binding birthdate,Converter={StaticResource birthdaytoage}}" FontAttributes="Bold" FontSize="Medium" VerticalOptions="End"></Label>
                            </StackLayout>
                            <Grid Padding="20,10,0,0">
                                <FlexLayout Grid.Row="0" Grid.Column="0" Direction="Row" FlowDirection="LeftToRight" AlignItems="Start" IsVisible="{Binding show_distance,Converter={StaticResource numbertoBool}}">
                                    <ffimageloading:CachedImage Source="locationdarkred.png" HeightRequest="15" WidthRequest="15" Margin="0,0,10,0"></ffimageloading:CachedImage>
                                    <Label Text="{Binding distance, StringFormat='{0}'}" FontSize="Medium" FontAttributes="Bold" />
                                    <Label Text="{Binding distance_metric,StringFormat='{0} away'}" FontSize="Small" FontAttributes="Bold" />
                                </FlexLayout>
                                <FlexLayout Grid.Row="0" Grid.Column="1" Direction="Row" FlowDirection="LeftToRight" AlignItems="Start" IsVisible="{Binding gender,Converter={StaticResource stringtoBool}}">
                                    <ffimageloading:CachedImage Source="genderdarkred.png" HeightRequest="15" WidthRequest="15" Margin="0,0,10,0"></ffimageloading:CachedImage>
                                    <Label Text="{Binding gender}" FontSize="Small" FontAttributes="Bold" />
                                </FlexLayout>
                                <FlexLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Direction="Row" FlowDirection="LeftToRight" AlignItems="Start" IsVisible="{Binding school,Converter={StaticResource stringtoBool}}">
                                    <ffimageloading:CachedImage Source="schooldarkred.png" HeightRequest="15" WidthRequest="15" Margin="0,0,10,0">
                                    </ffimageloading:CachedImage>
                                    <Label Text="{Binding school}"  FontSize="Small" FontAttributes="Bold"/>
                                </FlexLayout>
                            </Grid>
                            <StackLayout Padding="20,5,0,0" Orientation="Horizontal">
                                <FlexLayout Direction="Row" FlowDirection="LeftToRight" AlignItems="Start" IsVisible="{Binding job_title,Converter={StaticResource stringtoBool}}">
                                    <ffimageloading:CachedImage Source="jobdarkred.png" HeightRequest="15" WidthRequest="15" Margin="0,0,10,0">
                                    </ffimageloading:CachedImage>
                                    <Label Text="{Binding job_title}" FontSize="Small" FontAttributes="Bold"/>
                                </FlexLayout>
                                <FlexLayout Direction="Row" FlowDirection="LeftToRight" AlignItems="Start" IsVisible="{Binding company,Converter={StaticResource stringtoBool}}">
                                    <Label Text="at "  FontSize="Small" FontAttributes="Bold"/>
                                    <Label Text="{Binding company}"  FontSize="Small" FontAttributes="Bold"/>
                                </FlexLayout>
                            </StackLayout>
                            <FlexLayout Padding="10,20,0,0"  Direction="Row" FlowDirection="LeftToRight" AlignItems="Start" IsVisible="{Binding about,Converter={StaticResource stringtoBool}}">
                                <Label Text="{Binding about}" FontSize="Medium" FontAttributes="Bold" WidthRequest="280"/>
                            </FlexLayout>
                        </StackLayout>
                    </Frame>
                <Frame HasShadow="True" Grid.Row="2" Padding="0" Margin="0" CornerRadius="30">
                    <Button Text="Report this user" BackgroundColor="#98000b" TextColor="#EEEEEE" FontSize="Medium" CornerRadius="30"/>
                </Frame>
                    <Frame HasShadow="True" Grid.Row="3" Padding="10" Margin="0,0,0,10" CornerRadius="20" x:Name="instaFrame">
                        <StackLayout x:Name="instaLayout">
                            <Label Text="Instagram Photos" FontSize="Medium" FontAttributes="Bold" Padding="10,0,0,0"></Label>
                            <ScrollView Orientation="Horizontal">
                                <StackLayout x:Name="instagramAlbum" Orientation="Horizontal" HeightRequest="120">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <StackLayout WidthRequest="100" HeightRequest="100" Margin="10,10,10,0">
                                                <Frame
                                                   HeightRequest="100"
                                                   WidthRequest="100"
                                                   HorizontalOptions="Center"
                                                   Padding="0"
                                                   Margin="0"
                                                   IsClippedToBounds="True" CornerRadius="5">
                                                    <ffimageloading:CachedImage Aspect="AspectFill"
                                                               Source="{Binding image_url}">
                                                        <ffimageloading:CachedImage.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
                                                        </ffimageloading:CachedImage.GestureRecognizers>
                                                    </ffimageloading:CachedImage>
                                                </Frame>
                                            </StackLayout>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </StackLayout>
                            </ScrollView>
                        </StackLayout>
                    </Frame>
                </Grid>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>