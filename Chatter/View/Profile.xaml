<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" 
             xmlns:control="http://xamarin.com/schemas/2014/forms" 
             xmlns:cards="clr-namespace:PanCardView;assembly=PanCardView" 
             xmlns:local="clr-namespace:Chatter.Classes" 
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms" xmlns:controls="clr-namespace:PanCardView.Controls;assembly=PanCardView"
             mc:Ignorable="d"
             x:Class="Chatter.Profile" BackgroundColor="White">
    <Page.Resources>
        <local:BirthdaytoAgeConverter x:Key="birthdaytoage"></local:BirthdaytoAgeConverter>
        <local:StringToBoolen x:Key="stringtoBool"></local:StringToBoolen>
        <local:NumbertoBooleanConverter x:Key="numbertoBool"></local:NumbertoBooleanConverter>
    </Page.Resources>
    <ContentPage.Content>
        <Grid Margin="0,0,0,0" Padding="0" BackgroundColor="White" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid HeightRequest="50" Margin="0,0,0,0" Grid.Row="0" VerticalOptions="Start">
                <BoxView BackgroundColor="White" Margin="0" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" VerticalOptions="Start" />
                <!--<ImageButton BackgroundColor="Transparent" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="30" WidthRequest="28" x:Name="EditButton" Source="settings.png" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1"
                               Clicked="EditButton_Clicked"/>-->
                <ffimageloading:CachedImage Source="amareheader.png" Aspect="AspectFill" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="120" BackgroundColor="Transparent" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" />
            </Grid>
            <StackLayout Grid.Row="1" IsClippedToBounds="True" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All" >
                <Picker x:Name="imagePicker" IsVisible="False"  SelectedIndexChanged="imagePicker_SelectedIndexChanged" Title="Select Image">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Take Photo</x:String>
                            <x:String>Choose from Gallery</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                <AbsoluteLayout IsClippedToBounds="True" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All">
                    <Frame HasShadow="True"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           IsClippedToBounds="True" Padding="0" CornerRadius="100" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All">
                        <ImageButton
                                           x:Name="ProfileImage"  HeightRequest="200"
                                           WidthRequest="200" Source="tzuyu.jpg" 
                                                     Aspect="AspectFill" Clicked="ProfileImage_Clicked"/>
                    </Frame>
                    <ActivityIndicator AbsoluteLayout.LayoutBounds="0.5, 0.5, 50, 50"
                                                AbsoluteLayout.LayoutFlags="PositionProportional" IsRunning="True"   HeightRequest="80" WidthRequest="80"
                                             IsVisible="False" x:Name="loadingIndicator" Color="#3cc5d5" HorizontalOptions="Center" VerticalOptions="Center"></ActivityIndicator>
                    <ImageButton AbsoluteLayout.LayoutBounds="0.7, 0.95, 35, 35"
                                                AbsoluteLayout.LayoutFlags="PositionProportional" Aspect="AspectFit" BackgroundColor="Transparent" VerticalOptions="Start" HorizontalOptions="Center" 
                                                     HeightRequest="90" WidthRequest="90" x:Name="UpdateProfileButton" Source="edit.png"  Clicked="UpdateProfileButton_Clicked"/>
                    <ImageButton AbsoluteLayout.LayoutBounds="0.3, 0.95, 35, 35"
                                                AbsoluteLayout.LayoutFlags="PositionProportional" Aspect="AspectFit" BackgroundColor="Transparent" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="90" WidthRequest="90" x:Name="EditButton" Source="settings1.png" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1"
                               Clicked="EditButton_Clicked"/>
                </AbsoluteLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Padding="0,5,0,0" x:Name="nameLabel" FontAttributes="Bold" Text="{Binding username}" FontSize="Large"  HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Label Padding="0" Text=", " FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="End"/>
                    <Label Padding="0" x:Name="age" Text="{Binding birthdate,Converter={StaticResource birthdaytoage}}" FontAttributes="Bold" FontSize="Large" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="End"/>
                </StackLayout>
            </StackLayout>
            <ffimageloading:CachedImage Opacity="0.4" HeightRequest="110" Source="heartbeat.gif" Margin="0,0,0,0" Grid.Row="2" Aspect="AspectFill" HorizontalOptions="FillAndExpand" VerticalOptions="Start"></ffimageloading:CachedImage>

            <local:CustomFrame CornerRadius="20,20,0,0" Grid.Row="3" WidthRequest="600" BackgroundColor="WhiteSmoke" Margin="0,0,0,0" Padding="0,0,0,5" VerticalOptions="End" HorizontalOptions="Center">
                <StackLayout >
                    <cards:CarouselView x:Name="autoSlider">
                        <cards:CarouselView.ItemsSource>
                            <x:Array Type="{x:Type View}">
                                <StackLayout Padding="70,20,70,5" HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
                                    <Label Text="Match around the world" FontSize="Medium" HorizontalTextAlignment="Center" TextColor="Accent" FontAttributes="Bold"></Label>
                                    <Label Text="Navigate to anywhere with Amare" FontSize="Small" HorizontalTextAlignment="Center" TextColor="Black"></Label>
                                </StackLayout>
                                <StackLayout Padding="70,20,70,5" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="Control Your Profile" FontSize="Medium" HorizontalTextAlignment="Center" TextColor="Accent" FontAttributes="Bold"></Label>
                                    <Label Text="Limit what others see with Amare" FontSize="Small" HorizontalTextAlignment="Center" TextColor="Black"></Label>
                                </StackLayout>
                            </x:Array>
                        </cards:CarouselView.ItemsSource>
                        <controls:IndicatorsControl/>
                    </cards:CarouselView>
                    <Button x:Name="btnShareAmare" Clicked="btnShareAmare_Clicked" HorizontalOptions="Center" VerticalOptions="End" FontSize="Small" FontAttributes="Bold" CornerRadius="20" Text="Share the love" TextColor="White" BackgroundColor="#3cc5d5"></Button>
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="0,10,0,0">
                    </StackLayout>
                </StackLayout>
            </local:CustomFrame>
        </Grid>
    </ContentPage.Content>
</ContentPage>